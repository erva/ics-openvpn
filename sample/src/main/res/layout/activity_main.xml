<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tv_config_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/config_file_missing" />

    <EditText
        android:id="@+id/login"
        android:minWidth="200dp"
        android:layout_width="wrap_content"
        android:hint="Login"
        android:layout_height="wrap_content"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/password"
        android:minWidth="200dp"
        android:hint="Password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/btn_chose_file"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/choose_file" />

    <Button
        android:id="@+id/btn_start_vpn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/start_vpn"
        android:visibility="gone" />

    <Button
        android:id="@+id/btn_resume_vpn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/resume_vpn"
        android:visibility="gone" />
    <Button
        android:id="@+id/btn_pause_vpn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/pause_vpn"
        android:visibility="gone" />
    <Button
        android:id="@+id/btn_stop_vpn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/stop_vpn"
        android:visibility="gone" />

</LinearLayout>